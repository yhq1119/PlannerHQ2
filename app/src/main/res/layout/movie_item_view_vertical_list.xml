<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/text_view_movie_item_pic_vertical"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/description_movie"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bladerunner1982" />

    <TextView
        android:id="@+id/text_view_movie_item_title_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/not_set"
        app:layout_constraintEnd_toEndOf="@+id/text_view_movie_item_pic_vertical"
        app:layout_constraintStart_toStartOf="@+id/text_view_movie_item_pic_vertical"
        app:layout_constraintTop_toBottomOf="@+id/text_view_movie_item_pic_vertical" />

    <TextView
        android:id="@+id/text_view_movie_item_year_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/not_set"
        app:layout_constraintEnd_toEndOf="@+id/text_view_movie_item_title_vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_view_movie_item_title_vertical"
        app:layout_constraintTop_toBottomOf="@+id/text_view_movie_item_title_vertical" />
</android.support.constraint.ConstraintLayout>